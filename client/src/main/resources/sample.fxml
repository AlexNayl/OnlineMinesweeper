<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="client.Controller"  xmlns:fx="http://javafx.com/fxml" alignment="center">
    <!--Debug stuff, remove before submission-->
    <Button text="DebugConnect" onAction="#handleConnect" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="DebugSend" onAction="#handleSendTestCommand" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

    <!--This is where user will choose difficulty-->
    <Button fx:id="easy" text="Easy" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#easy" />
    <Button fx:id="medium" text="medium" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#medium" />
    <Button fx:id="hard" text="hard" GridPane.rowIndex="1" GridPane.columnIndex="2" onAction="#hard" />


    <!--This is where the minesweeper layout will be initialized based on the number the user chooses-->
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" fx:id="gridpane" />
</GridPane>

